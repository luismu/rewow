<!DOCTYPE html>
<html>
  <head>
    <title>Rewow</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
          <%= link_to "REWOW", root_path, class: "navbar-brand" %>
      </div>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
  
          <li>
            <%= link_to "Medical record", new_medical_service_url, class: "navbar-brand" %>
          </li>
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            Medical services <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="#">Medical Appointment</a></li>
              <li><a href="#">Vaccination Appointment</a></li>
              <li><a href="#">Deworming Appointment</a></li>
        
            </ul>
          </li>
          
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            SPA <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="#">Bath Appointment</a></li>
              <li><a href="#">Haircut Appointmenthes</a></li>
              
        
            </ul>
          </li>
  
          <li role="presentation" class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
            SHOP <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li><a href="#">Toys</a></li>
              <li><a href="#">Clothes</a></li>
              
        
            </ul>
          </li>

          <% if user_signed_in? %>
          <li>
            <%= link_to('Logout', destroy_user_session_path, method: :delete) %>        
          </li>
          <% else %>
          <li>
            <%= link_to('Login', new_user_session_path)  %>  
          </li>
        <% end %>

        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>

  <div class="container>
    <%= yield %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
  </body>
</html>
